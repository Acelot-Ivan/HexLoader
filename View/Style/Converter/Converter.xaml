<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:HexLoader.View.Style.Converter">
    <converter:BooleanToVisibilityConverter x:Key="BoolToVis"
                                            True="Visible"
                                            False="Collapsed" />

    <converter:BooleanToVisibilityConverter x:Key="InvertBoolToVis"
                                            True="Collapsed"
                                            False="Visible" />

    <converter:InverseBooleanConverter x:Key="InvertBool" />

</ResourceDictionary>